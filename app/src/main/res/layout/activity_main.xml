<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:id="@+id/return_Btn1"
        android:layout_width="73dp"
        android:layout_height="47dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/returnbtn" />

    <ImageView
        android:id="@+id/deco2"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="230dp"
        android:src="@drawable/deco2" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/deco2"
        android:layout_marginTop="80dp"
        android:src="@drawable/deco3" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/return_Btn1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:scrollbars="none"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp">

            <ImageView
                android:id="@+id/btn1"
                android:layout_width="118dp"
                android:layout_height="114dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/tag1" />

            <ImageView
                android:id="@+id/btn3"
                android:layout_width="91dp"
                android:layout_height="91dp"
                android:src="@drawable/tag5"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="60dp"

                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/btn2"
                android:layout_width="245dp"
                android:layout_height="196dp"
                android:layout_below="@id/btn3"
                android:layout_marginTop="10dp"
                android:layout_marginStart="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/tag2" />

            <ImageView
                android:id="@+id/btn4"
                android:layout_width="187dp"
                android:layout_height="181dp"
                android:scaleType="fitXY"
                android:layout_below="@id/btn2"
                android:src="@drawable/tag4"
                android:layout_alignEnd="@id/btn3"
                android:layout_marginTop="-60dp"
                android:layout_marginEnd="-15dp"/>

            <ImageView
                android:id="@+id/btn5"
                android:layout_width="121dp"
                android:layout_height="115dp"
                android:src="@drawable/tag3"
                android:layout_below="@id/btn4"
                android:layout_marginStart="5dp"/>

            <ImageView
                android:id="@+id/btn6"
                android:layout_width="186dp"
                android:layout_height="130dp"
                android:background="@drawable/tag6"
                android:layout_below="@id/btn5"
                android:layout_alignStart="@id/btn2"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rocket3" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/neko1" />



</RelativeLayout>