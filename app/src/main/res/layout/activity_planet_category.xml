<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <ImageView
        android:id="@+id/return_Btn2"
        android:layout_width="73dp"
        android:layout_height="47dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/returnbtn" />

    <ImageView
        android:id="@+id/tag_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/return_Btn2"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tag1" />

    <ImageView
        android:id="@+id/playIntro"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignBottom="@id/tag_icon"
        android:layout_alignParentRight="true"
        android:src="@drawable/player" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tag_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag_icon"
        android:layout_marginTop="5dp" />
</RelativeLayout>