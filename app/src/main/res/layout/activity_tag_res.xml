<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/return_Btn_res"
        android:layout_width="73dp"
        android:layout_height="47dp"
        android:layout_marginTop="30dp"
        android:paddingStart="20dp"
        android:src="@drawable/returnbtn" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/return_Btn_res"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp"
        android:src="@drawable/deco3" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="-40dp"
        android:rotation="340"
        android:src="@drawable/deco2" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/detail_pic"
        android:layout_marginStart="100dp"
        android:layout_marginTop="-2dp"
        android:src="@drawable/deco5" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/detail_pic"
        android:layout_marginStart="180dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/deco4" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="-6dp"
        android:scaleType="fitXY"
        android:src="@drawable/alians" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-78dp"
        android:layout_marginBottom="-15dp"
        android:scaleType="fitXY"
        android:src="@drawable/deco6" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/rocketneko" />

    <ImageView
        android:id="@+id/return2main"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/neko2" />

    <RelativeLayout
        android:id="@+id/tag_pic"
        android:layout_width="195dp"
        android:layout_height="146dp"
        android:layout_below="@id/return_Btn_res"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/bg4Pic"
            android:layout_width="155dp"
            android:layout_height="146dp"
            android:background="@drawable/background4pic"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/Pic"
            android:layout_width="135dp"
            android:layout_height="121dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:scaleType="fitXY"
            android:src="@drawable/test" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/detail_pic"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/tag_pic"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_left" />

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />

        <RelativeLayout
            android:id="@+id/pic_show"
            android:layout_width="212dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/bg4PicShow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background4pic"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/pic_show_detail"
                android:layout_width="192dp"
                android:layout_height="175dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:scaleType="fitXY"
                android:src="@drawable/test_wx" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/pic_show_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:scaleType="fitCenter"
        android:src="@drawable/test_wx" />
</RelativeLayout>